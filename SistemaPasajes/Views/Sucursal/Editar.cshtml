@using SistemaPasajes.Models
@model SucursalCLS

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>


<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("Editar", "Sucursal", FormMethod.Post, new { @id = "frmEditar" }))
        {
            <div>
                @Html.LabelFor(p => p.iidsucursal)
                @Html.TextBoxFor(p => p.iidsucursal, new { @class = "form-control", @readOnly = true })
                @Html.ValidationMessage("iidsucursal", new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(p => p.nombre)
                @Html.TextBoxFor(p => p.nombre, new { @class = "form-control" })
                @Html.ValidationMessage("nombre", new { @class = "text-danger" })
                @*@if (Model != null && Model.mensajeError != null)
                    {
                        @Html.Label(Model.mensajeError, new { @class = "text-danger" })
                    }*@
            </div>
            <div>
                @Html.LabelFor(p => p.direccion)
                @Html.TextBoxFor(p => p.direccion, new { @class = "form-control" })
                @Html.ValidationMessage("direccion", new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(p => p.telefono)
                @Html.TextBoxFor(p => p.telefono, new { @class = "form-control" })
                @Html.ValidationMessage("telefono", new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(p => p.email)
                @Html.TextBoxFor(p => p.email, new { @class = "form-control" })
                @Html.ValidationMessage("email", new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(p => p.fechaApertura)
                @Html.EditorFor(p => p.fechaApertura, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("fechaApertura", new { @class = "text-danger" })
            </div>
            <div style="margin:auto">
                <input type="submit" value="Enviar" class="btn btn-primary" />
                @Html.ActionLink("Regresar", "Index", "Sucursal", null, new { @class = "btn btn-danger" })
            </div>
        }
    </div>
</div>


<script>
    //Para mostrar un mensaje de confirmacion
    var frmEditar = document.getElementById("frmEditar");
    frmEditar.onsubmit = function (e) { //Cuando se haga click en Submit
        e.preventDefault(); //Detengo la ejecucion por defecto
        if (confirm("¿Deseas guardar los cambios?") == 1) { //Aceptar vale 1, Cancelar vale 0
            frmEditar.submit(); //Lo envio (Como si se hace click en el boton)
        }
    }
</script>
