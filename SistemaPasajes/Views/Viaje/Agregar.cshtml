                        @Html.EditorFor(model => model.fotoRecuperCadena, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.fotoRecuperCadena, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div style="margin:auto">
                    @Html.ActionLink("Regresar", "Index", "Viaje", null, new { @class = "btn btn-danger" })
