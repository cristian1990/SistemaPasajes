    function ObtenerId(idEmpleadoSeleccionado) {
        document.getElementById("idEmpleado").value = idEmpleadoSeleccionado;
    }

    function AceptarEliminar() {
        var frmEliminar = document.getElementById("frmEliminar");
        frmEliminar.submit();
    }

