    function ObtenerId(idClienteSeleccionado) {
        document.getElementById("idCliente").value = idClienteSeleccionado;
    }

    function AceptarEliminar() {
        var frmEliminar = document.getElementById("frmEliminar");
        frmEliminar.submit();
    }

</script>