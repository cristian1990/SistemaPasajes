@model IEnumerable<SistemaPasajes.Models.PaginaCLS>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<!-- Button trigger modal - Bootstrap -->
<button type="button" onclick="Agregar()" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    Agregar
</button>
<!-- FIN Button trigger modal - Bootstrap -->

<p>
    <!--Llamo a la vista Parcial y le asigno el modelo (El Model = List<PaginaCLS>)-->
    @*@Html.Partial("_TablaPagina", Model);*@

    <!--Agregamos el Ajax.BeginForm, para el textbox del filtro-->
    @using (Ajax.BeginForm("Filtrar", "", new AjaxOptions
    {
        HttpMethod = "POST",
        UpdateTargetId = "divPagina", //En la etiqueta con este ID, se coloca la respuesta del servidor
        InsertionMode = InsertionMode.Replace //Se va a reemplazar por lo que se trae del servidor
    }, new { @id = "frmFiltrado" })) //Indico el ID del formulario
    {
        @Html.Label("Ingrese mensaje")
        @Html.TextBox("mensajeFiltro")
        @*<input type="submit" value="Buscar" class="btn btn-primary" />*@

        <!--En esta parte mostramos la vista Parcial-->
        <div id="divPagina">
            @Html.Partial("_TablaPagina", Model) <!--Enviamos el modelo a la vista parcial-->
        </div>
    }
</p>

<!--CREAMOS UN POPUP PARA CONFIRMAR ANTES DE ELIMINAR-->
<div class="modal fade" id="exampleModalConfirmacion" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">¿Dese guardar los cambios?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div style="padding:1em">
                <button type="button" id="btnCerrarConfirmacion" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" onclick="EliminarRegistro()" class="btn btn-info">Aceptar</button>
            </div>
        </div>
    </div>
</div>

<!--CREAMOS UN POPUP PARA AGREGAR UNA PAGINA-->
<!-- Modal - Bootstrap -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <!--AGREGAMOS EL AJAX AL FORMULARIO-->
            @using (Ajax.BeginForm("Guardar", "Pagina", null, new AjaxOptions
            {
                HttpMethod = "POST", //Metodo de envio
                OnSuccess = "Guardar", //Funcion de JS que se va a ejecutar
                InsertionMode = InsertionMode.Replace,
                UpdateTargetId = "divError" //Id de una etiqueta donde se muestra la info de error
            }))
            {
                @Html.Hidden("titulo") //Utilizado para saber la operacion
                <div class="modal-body">
                    <!--En los TextBox los nombres deben llamarse igual que la prop de la clase Rol-->
                    <div>
                        @Html.Label("Mensaje Link")
                        @Html.TextBox("mensaje", null, new { @class = "form-control" })
                    </div>
                    <div>
                        @Html.Label("Accion")
                        @Html.TextBox("accion", null, new { @class = "form-control" })
                    </div>
                    <div>
                        @Html.Label("Controlador")
                        @Html.TextBox("controlador", null, new { @class = "form-control" })
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btnCerrar" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                </div>
            }
            <!--FIN AJAX EN FORMULARIO-->
            <!--Para mostrar los mjes de error-->
            <div id="divError"></div>
        </div>
    </div>
</div>

<script>
    //PARA BOTON DE FILTRADO
    var frmFiltrado = document.getElementById("frmFiltrado");
    var mensaje = document.getElementById("mensajeFiltro");

    mensaje.onkeyup = function () { //Cuando se presione y suelte una tecla
        $("#frmFiltrado").trigger("submit"); //Envio el formulario
    }
    //frmFiltrado.onsubmit = function () {
    //    $("#frmFiltrado").trigger("submit");
    //}
    //FIN

    function Agregar() {
        Limpiar();
        //el -1 se manda al controlador, para que sepa la operacion
        document.getElementById("titulo").value = "-1";
    }

    function Guardar(rpta) { //rpta: es el retorno que se envia desde el controlador
        if (rpta == "1" || rpta == "0") //Si la respuesta es 1 es que se pudo agregar, tambien puede ser 0 si no se modifico nada sobre un obj
        {
            $("#frmFiltrado").trigger("submit"); //Envio el formulario
            document.getElementById("btnCerrar").click(); //Cierro manualmente el popup
            alert("Se agrego correctamente");
        } else {
            alert("Ocurrio un error");
        }
    }

    function Editar(idPagina) {
        Limpiar();
        //Obtenemos la informacion del controlador (no llega en JSON) y llenamos los textbox
        $.get("Pagina/recuperarInformacion/?idPagina=" + idPagina, function (data) { //Obtenemos el object (en data esta la respuesta del controlador)
            document.getElementById("mensaje").value = data.mensaje; //Cargamos los datos en el popups
            document.getElementById("accion").value = data.accion; //data.accion, debe tener el mismo nombre de la prop de la clase
            document.getElementById("controlador").value = data.controlador;
        })
        document.getElementById("titulo").value = idPagina; //Escribimos en el Hidden, el idPagina
    }

    //Funcion para limpiar el contenido de los popups, cada vez que se abre
    function Limpiar() {
        var controles = document.getElementsByClassName("form-control");
        for (var i = 0; i < controles.length; i++) { //Recorro todos los controles
            controles[i].value = ""; //Vacio todos los textbox
        }
    }

    //Metodo para obtener el Id de la entidad seleccionada
    function Eliminar(iidpagina) {
        //alert(iidpagina);
        document.getElementById("titulo").value = iidpagina; //Asigno al Hidden("titulo"), el Id seleccionado para enviar al controlador
    }

    //Metodo para realizar la eliminacion de la pagina
    function EliminarRegistro() {
        var iidpagina = document.getElementById("titulo").value; //Obtengo el valor del Hidden("titulo")

        $.get("Pagina/EliminarPagina/?iidpagina=" + iidpagina, function (data) { //data es la respuesta enviada del servidor
            if (data == 1) { //Tendra 1 porque solo se modifica un registro
                alert("Se ejecuto correctamente");
                $("#frmFiltrado").trigger("submit"); //Envio el formulario
                document.getElementById("btnCerrarConfirmacion").click(); //Cierro el popups
            }
        })
    }

</script>